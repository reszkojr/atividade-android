<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="284dp"
        android:layout_marginTop="641dp"
        android:text="Return"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNum1"
        android:layout_width="92dp"
        android:layout_height="52dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="202dp"
        android:ems="10"
        android:hint="Number"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNum2"
        android:layout_width="92dp"
        android:layout_height="52dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="202dp"
        android:ems="10"
        android:hint="Number"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/spOperador"
        app:layout_constraintStart_toEndOf="@+id/spOperador"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spOperador"
        android:layout_width="68dp"
        android:layout_height="52dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="180dp"
        android:contentDescription="Operador"
        app:layout_constraintBottom_toBottomOf="@+id/etNum1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etNum1"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>